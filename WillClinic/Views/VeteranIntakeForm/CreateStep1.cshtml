@model WillClinic.Models.AccountViewModels.IntakeFormViewModel

@{
    ViewData["Title"] = "Create Step 1";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateStep1">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <h1>SECTION 1: Basic Information</h1>

            <div class="form-group">
                <label asp-for="FullLegalName" class="control-label">1) Full legal name: *</label>
                <h5>Include your first, middle, and last names. Example: John Smith Doe</h5>
                <input asp-for="FullLegalName" class="form-control" />
                <span asp-validation-for="FullLegalName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label">2) Address: *</label>
                <h5>Street Address, City, and State</h5>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label">3) Phone Number: *</label>
                <h5>Include area code</h5>
                <input asp-for="PhoneNumber" type="number" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Next" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="VeteranIntakeForm" asp-action="CreateStep0">Back</a>
</div>

