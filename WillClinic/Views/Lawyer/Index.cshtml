@model List<WillClinic.Models.LawyerAvailability>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-lg-10 col-lg-offset-1 col-md-10 col-md-offset-1 col-sm-12 col-xs-12">
        <h2>Availability Timeslots</h2>
        <ul class="container bg-info">
            @foreach (var item in Model)
            {
               <li class="row">
                   <form method="post" asp-controller="LawyerAvailability" asp-action="Delete" asp-route-id="@item.ID">
                       <p class="col-lg-10">@item.TimeAvailable</p>
                       <button type="submit" class="col-xs-2 btn btn-danger">Delete</button>
                   </form>
               </li>
             }
            <div class="row">
                <div class="col-xs-12"><a asp-controller="LawyerAvailability" asp-action="Create">Add Time Slot</a></div>
            </div>
        </ul>
    </div>
</div>

