@{
    ViewData["Title"] = "Home Page";
}

<div class="info-custom row">
    <div class="col-lg-12 text-center">
        <h1>Veterans Will Clinic</h1>
        <h4>
        Providing FREE Estate Planning documents to Veterans of the U.S. Armed Forces in Washington State</h4>
    </div>
    </div>

<div class="row">
    <div class="col-md-6">
        <div class="card center-block text-center" style="width: 20rem;">
            <i id="lawyer" class="material-icons">account_balance</i>
            <div class="card-block text-center">
                <h2 class="card-title">Lawyer</h2>
                <p class="card-text">Volunteer today and be quickly matched up with a Veteran in need of legal services.  Meet locally to complete form</p>
                <a asp-area="" class="btn btn-primary" asp-controller="Lawyer" asp-action="Register">Lawyer Register</a>
            </div>
        </div>
    </div>

    <div class="col-md-6">
    <div class="card center-block text-center" style="width: 20rem;">
        <i class="material-icons">account_circle</i>
        <div class="card-block text-center">
            <h2 class="card-title">Veterans</h2>
            <p class="card-text">Gain access to the Will Intake Form & be matched up with a local lawyer who will guide you through the process</p>
            <a asp-area="" class="btn btn-primary" asp-controller="Veteran" asp-action="Register">Veteran Register</a>
        </div>
    </div>

    </div>
</div>
