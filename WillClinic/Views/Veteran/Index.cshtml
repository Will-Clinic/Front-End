@model List<WillClinic.Models.VeteranIntakeForm>

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

        <table class="table">
            <tr><td id="tname" colspan="4">Veteran Intake Form Module</td></tr>
            <tr id="th"><td colspan="4" class="text-center">Current/Active Form</td></tr>
            @foreach(var i in Model)
            {
                if(i.IsNotarized == false)
                {
                    <tr>
                    <td>Form Name - Form Date</td>
                    <td>View Form</td>
                    <td>Edit Form</td>
                    <td>Delete Form</td>
                    <td><a asp-action="Details" asp-controller="Veteran" asp-route-id="@i.ID">Details</a></td>
                    <td><a asp-action="Edit" asp-controller="Veteran" asp-route-id="@i.ID">Edit</a></td>
                    <td><a asp-action="Delete" asp-controller="Veteran" asp-route-id="@i.ID">Delete</a></td>
                    </tr>
                }
            }
            <tr><td><a asp-action="AddForm" asp-controller="Veteran">Create New Form</a></td></tr>
            <tr id="th"><td colspan="4" class="text-center">Archived Forms</td></tr>
            @foreach(var i in Model)
            {
                if(i.IsNotarized == true)
                {
                    <tr>
                    <td>Form Name</td>
                    <td>Form Date</td>
                    <td><a asp-action="Details" asp-controller="Veteran" asp-route-id="@i.ID">Details</a></td>
                    <td><a asp-action="Delete" asp-controller="Veteran" asp-route-id="@i.ID">Delete</a></td>
                    </tr>
                }
            }
        </table>
    </div>
</div>