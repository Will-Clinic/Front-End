@model WillClinic.Models.VeteranLawyerMatch
@{
    ViewData["Title"] = "Default";
}

<div class="col-md-2"></div>
<div class="cardbordered border-primary col-md-8">
    <div class="card-header text-center">
        <h3>
            <b>Find Attorney</b>
        </h3>
    </div>
    <div class="card-body text-center">
        <h4><b>Attorney: @Model.Lawyer.ApplicationUser.FirstName</b></h4>
        <h3>Available Time Slot</h3>
        @foreach (LawyerAvailability time in Model.Lawyer.Availability)
        {
        <div style="display: inline-block">
            <h4>
                @time.TimeAvailable
            </h4>
        </div>
        <div  style="display: inline-block; margin-left: 1%">

            <form method="post" asp-controller="Match" asp-action="AcceptTimeSlot" asp-route-timeId="@time.ID">
                <button type="submit" class="btn-primary btn btn-success">Accept Time Slot</button>
            </form>
        </div>
        }
    </div>
</div>
<div class="col-md-2"></div>
