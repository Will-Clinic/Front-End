@model WillClinic.Models.LawyerAvailability

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Enter Availability:</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TimeAvailable" class="control-label"></label>
                <input asp-for="TimeAvailable" class="form-control" />
                <span asp-validation-for="TimeAvailable" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Lawyer" asp-action="Index">Back to Home</a>
</div>

