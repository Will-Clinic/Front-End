@page
@model WillClinic.Pages.NetWorthModel
@{
    ViewData["Title"] = "NetWorth";
    Layout = "~/Views/Shared/_IntakeLayout.cshtml";
}

<form method="post">

    <h3>
        Asset Information
    </h3>

    <h4>
        Please estimate the value of you estate, including cash, personal property, real estate (equity only), savings, life
        insurance and retirement assets (401(K) or IRA).
        Include the value of all property owned in your name. If you are married, list the value of the property owned by you
        and your spouse; if the property is community property, only list HALF of the value of the asset. You are acquired
        the property by gift, inheritance, before marriage, or have kept the asset in your individual name, please list the
        entire value.
        THE TOTAL VALUE OF YOUR ASSETS (your net worth) must be less than $500,000 ($1,000,000 if married) in
        order to qualify for the WA Vets Will Clinic.
    </h4>
    <hr />

    <div class="form-group">
        <label asp-for="Veteran.VeteranNetWorth.MonthlyIncome" class="control-label">
            Monthly Income:
        </label>
        <input asp-for="Veteran.VeteranNetWorth.MonthlyIncome" class="form-control" />
        <span asp-validation-for="Veteran.VeteranNetWorth.MonthlyIncome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Veteran.VeteranNetWorth.BankAccountAssets" class="control-label">
            Bank Accounts, CD's, etc:
        </label>
        <input asp-for="Veteran.VeteranNetWorth.BankAccountAssets" class="form-control" />
        <span asp-validation-for="Veteran.VeteranNetWorth.BankAccountAssets" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Veteran.VeteranNetWorth.RealEstateAssets" class="control-label">
            Real Estate (equity only):
        </label>
        <input asp-for="Veteran.VeteranNetWorth.RealEstateAssets" class="form-control" />
        <span asp-validation-for="Veteran.VeteranNetWorth.RealEstateAssets" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Veteran.VeteranNetWorth.LifeInsuranceCashValue" class="control-label">
            Life Insurance (cash value only, do not include term life insurance):
        </label>
        <input asp-for="Veteran.VeteranNetWorth.LifeInsuranceCashValue" class="form-control" />
        <span asp-validation-for="Veteran.VeteranNetWorth.LifeInsuranceCashValue" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Veteran.VeteranNetWorth.RetirementAccounts" class="control-label">
            IRA or 401(k) cash value:
        </label>
        <input asp-for="Veteran.VeteranNetWorth.RetirementAccounts" class="form-control" />
        <span asp-validation-for="Veteran.VeteranNetWorth.RetirementAccounts" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Veteran.VeteranNetWorth.BusinessInterest" class="control-label">
            Business Interests:
        </label>
        <input asp-for="Veteran.VeteranNetWorth.BusinessInterest" class="form-control" />
        <span asp-validation-for="Veteran.VeteranNetWorth.BusinessInterest" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Veteran.VeteranNetWorth.StockBonds" class="control-label">
            Stocks and Bonds:
        </label>
        <input asp-for="Veteran.VeteranNetWorth.StockBonds" class="form-control" />
        <span asp-validation-for="Veteran.VeteranNetWorth.StockBonds" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Veteran.VeteranNetWorth.Pension" class="control-label">
            Pension Benefits that continue after your death:
        </label>
        <input asp-for="Veteran.VeteranNetWorth.Pension" class="form-control" />
        <span asp-validation-for="Veteran.VeteranNetWorth.Pension" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Veteran.VeteranNetWorth.MoneyOwedToYou" class="control-label">
            Money owed to you:
        </label>
        <input asp-for="Veteran.VeteranNetWorth.MoneyOwedToYou" class="form-control" />
        <span asp-validation-for="Veteran.VeteranNetWorth.MoneyOwedToYou" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Veteran.VeteranNetWorth.OtherAssetsOrMoney" class="control-label">
            Other money and/or property:
        </label>
        <input asp-for="Veteran.VeteranNetWorth.OtherAssetsOrMoney" class="form-control" />
        <span asp-validation-for="Veteran.VeteranNetWorth.OtherAssetsOrMoney" class="text-danger"></span>
    </div>
    
    <hr />
    
    <div class="class-md-12">
        <div class="form-group col-md-offset-1 col-md-1 pull-left">
            <a asp-controller="VeteranIntakeForm" asp-action="CreateStep2" class="btn btn-danger">Back</a>
        </div>

        <div class="form-group text-center col-md-8 pull-left">
            <a asp-controller="VeteranIntakeForm" asp-action="" class="btn btn-default">Save & Exit</a>
        </div>

        <div class="form-group col-md-2">
            <input type="submit" value="Next" class="btn btn-success" />
        </div>
    </div>
</form>

