@page
@model WillClinic.Pages.Lawyers.LibrariesModel
@{
    ViewData["Title"] = "Libraries";
}

<h2>Libraries</h2>

<p class="alert alert-primary">Select multiple libraries by holding the CTRL or SHIFT keys while clicking</p>

<form method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label asp-for="SelectedLibraryIds"></label>
        <select multiple="multiple" asp-for="SelectedLibraryIds" asp-items="@Model.AllLibraries" class="form-control" size="12"></select>
        <span asp-validation-for="SelectedLibraryIds"></span>
    </div>

    <div class="btn-group">
        <a asp-page="Profile" class="btn btn-danger">Cancel</a>
        <button type="submit" class="btn btn-success">Update</button>
    </div>
</form>