    @*TODO: If veteran profile states Veteran is married, then display this question*@
    <div class="form-group">
        <label asp-for="FullNameSpouse" class="control-label">
            Full legal name of your spouse
        </label>
        <h5>
            Provide the full legal name of your spouse
        </h5>
        <input asp-for="FullNameSpouse" class="form-control" />
        <span asp-validation-for="FullNameSpouse" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="HaveChildren" class="control-label">
            Do you have any children? *
        </label>
        <h5>
            Include biological, adopted, or step-children
        </h5>
        <div class="radio">
            <label>
                <input asp-for="HaveChildren" type="radio" value="true" /> Yes
            </label>
            <label>
                <input asp-for="HaveChildren" type="radio" value="false" /> No
            </label>
        </div>
    </div>

    @*TODO: If veteran has children, ask the following questions, if not keep hidden*@
    <div class="form-group">
        <label asp-for="UnderAgeChildren" class="control-label">
            Do you have any minor children?
        </label>
        <h5>
            (under the age of 18 on October 12, 2013)
        </h5>
        <div class="radio">
            <label>
                <input asp-for="UnderAgeChildren" type="radio" value="true" /> Yes
            </label>
            <label>
                <input asp-for="UnderAgeChildren" type="radio" value="false" /> No
            </label>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="MinorChildrenDifferentSpouse" class="control-label">
            If you have minor children, AND the parent of your minor child is DIFFERENT from your current spouse,
            please list them below.
        </label>
        <input asp-for="MinorChildrenDifferentSpouse" class="form-control" />
        <span asp-validation-for="MinorChildrenDifferentSpouse" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CurrentlyPregnant" class="control-label">
            Are you, your spouse, or your partner currently pregnant?
        </label>
        <div class="radio">
            <label>
                <input asp-for="CurrentlyPregnant" type="radio" value="true" /> Yes
            </label>
            <label>
                <input asp-for="CurrentlyPregnant" type="radio" value="false" /> No
            </label>
        </div>
    </div>
