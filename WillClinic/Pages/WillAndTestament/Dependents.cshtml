    ViewData["Title"] = "Dependents";
    Layout = "~/Views/Shared/_IntakeLayout.cshtml";
}

<h2>Dependents</h2>

<form method="post">
    <hr />
    <div class="form-group">
        <label asp-for="HouseHoldSize" class="control-label">
            Household Size:
        </label>
        <input asp-for="HouseHoldSize" class="form-control" />
        <span asp-validation-for="HouseHoldSize" class="text-danger"></span>
    </div>

    @*<div class="form-group">
